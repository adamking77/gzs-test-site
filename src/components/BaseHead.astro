---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="GenZen Solutions - Strategic Legacy Protection"
  description="Protecting your legacy from systematic exploitation through strategic intelligence and cultural understanding."
  canonical="https://gzs-test-site.onrender.com"
  openGraph={{
    url: "https://gzs-test-site.onrender.com",
    title: "GenZen Solutions - Strategic Legacy Protection",
    description: "Protecting your legacy from systematic exploitation through strategic intelligence and cultural understanding.",
    images: [
      {
        url: "/adam-king.jpg",
        width: 1200,
        height: 630,
        alt: "GenZen Solutions",
        type: "image/jpeg",
      },
    ],
    site_name: "GenZen Solutions",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@adamking77",
    site: "@genzensolutions",
    cardType: "summary_large_image",
  }}
/>

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Basic Meta Tags -->
<title>GenZen Solutions - Strategic Legacy Protection</title>
<meta
  name="description"
  content="Protecting your legacy from systematic exploitation through strategic intelligence and cultural understanding."
/>
<meta name="keywords" content="legacy protection, strategic intelligence, cultural understanding, legacy threats" />
<meta name="author" content="Adam King" />

<!-- Favicons -->
<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/icon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />

<!-- Favicon for IE -->
<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

<!-- Favicons for different sizes -->
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://gzs-test-site.onrender.com" />
<meta property="og:title" content="GenZen Solutions - Strategic Legacy Protection" />
<meta
  property="og:description"
  content="Protecting your legacy from systematic exploitation through strategic intelligence and cultural understanding."
/>
<meta property="og:image" content="/adam-king.jpg" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://gzs-test-site.onrender.com" />
<meta property="twitter:title" content="GenZen Solutions - Strategic Legacy Protection" />
<meta
  property="twitter:description"
  content="Protecting your legacy from systematic exploitation through strategic intelligence and cultural understanding."
/>
<meta property="twitter:image" content="/adam-king.jpg" />

<!-- Canonical URL -->
<link rel="canonical" href="https://gzs-test-site.onrender.com" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Apple Touch Icon (already included in favicons, but keeping for backwards compatibility) -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

<!-- Theme Color for Mobile Browsers -->
<meta name="theme-color" content="#ffffff" />

<!-- For IE -->
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
